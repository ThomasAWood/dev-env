#!/bin/bash

# Stow all dotfiles from ../dotfiles directory

DOTFILES_DIR="../dotfiles"

# Change to the dotfiles directory so stow can use .stowrc
cd "$DOTFILES_DIR" || exit 1

# Loop through all directories in the dotfiles directory
for dir in */; do
    # Get the directory name without trailing slash
    package="${dir%/}"

    echo "Stowing $package..."
    stow "$package"
done

echo "All dotfiles stowed successfully!"
